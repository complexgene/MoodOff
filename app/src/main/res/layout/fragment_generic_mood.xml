<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/genericmood"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.moodoff.GenericMood">
    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FF00"
        android:layout_gravity="fill_horizontal"
        android:id="@+id/floatingButtons"
    >
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            app:backgroundTint="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/cameraicon"
            android:id="@+id/btn_camera"
            app:fabSize="mini"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/love_ns"
            android:id="@+id/btn_love"
            app:backgroundTint="#ffffff"
            android:layout_alignTop="@+id/btn_camera"
            android:layout_toLeftOf="@+id/btn_camera"
            android:layout_toStartOf="@+id/btn_camera"
            android:layout_marginEnd="7dp"
            app:fabSize="mini"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/changemood"
            android:id="@+id/btn_changemood"
            app:backgroundTint="#ffffff"
            android:layout_alignTop="@+id/btn_love"
            android:layout_toLeftOf="@+id/btn_love"
            android:layout_toStartOf="@+id/btn_love"
            android:layout_marginEnd="7dp"
            app:fabSize="mini"
            />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/btn_dedicate"
            android:id="@+id/btn_dedicate"
            app:backgroundTint="#ffffff"
            android:layout_alignTop="@+id/btn_changemood"
            android:layout_toLeftOf="@+id/btn_changemood"
            android:layout_toStartOf="@+id/btn_changemood"
            android:layout_marginEnd="7dp"
            app:fabSize="mini"
            />
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/storyTitle"
    android:background="#000000"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_storytitle" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/storyAndPlayer"
        android:background="#000000"
        android:layout_below="@id/storyTitle"
        >
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView3">
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_story"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|italic"
            android:fontFamily="cursive"
            android:textSize="18sp" />
        </ScrollView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/nameOfSong"
                android:text="UPVOTE(0)"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_above="@+id/duration"
                android:layout_alignParentRight="true"
                android:text="COMMENTS(0)"
                />
        <!--<ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="70dp"
            android:scaleType="fitXY"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:id="@+id/photoView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />-->
        <TextView
            android:id="@+id/nameOfSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:text="[ Click on Play to play Random Song ]"
            android:textColor="#FFFF00"
            android:background="#000000"
            android:textSize="18sp"
            android:textStyle="italic"
            android:fontFamily="cursive" />
        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBar"
            android:layout_toRightOf="@id/nameOfSong"
            android:gravity="right"
            android:text="00:00"
            android:layout_marginRight="5dp"
            android:textColor="#FFFF00"
            android:background="#000000"
            android:textSize="16sp"
            android:textStyle="italic"
            android:fontFamily="cursive" />
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttons"
            android:background="#CFFF00"
            style="@style/Widget.AppCompat.SeekBar" />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            >

            <Button
                android:id="@+id/repeatButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/repeat_none"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickRepeatButton" />
            <Button
                android:id="@+id/prevButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/prev"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickPrevButton" />
            <Button
                android:id="@+id/playPauseBtn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/play"
                android:layout_weight="1"
                android:text=""
                android:visibility="visible"
                android:onClick="onClickPlayOrPauseButton" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
            <Button
                android:id="@+id/stopButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/stop"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickStopButton" />
            <Button
                android:id="@+id/nextButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/next"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickNextButton" />

            <Button
                android:id="@+id/shuffleButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/shuffle"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickShuffleButton" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_story_spinner"
            android:layout_below="@+id/scrollView3"
            android:layout_marginTop="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="..Loading the Story.."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:id="@+id/tv_loading"
            android:textColor="#FFFF00"
            android:layout_below="@+id/load_story_spinner"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>
