<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/songnamedisplaypanel"
    android:layout_width="match_parent"
    android:id="@+id/genericmood"
    android:layout_height="match_parent"
    tools:context="com.moodoff.ui.GenericMood">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/storyAndPlayer"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/topPanelLol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/likeAndStoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/songnamedisplaypanel"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_below="@id/topPanelLol"
            android:layout_above="@id/songNameAndDuration"
            >
            <TextView
                android:gravity="center_horizontal"
                android:background="#e0e0e0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- The different Romance -"
                android:textSize="18dp"
                android:id="@+id/tv_storytitle" />
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isScrollContainer="false"
                android:background="@color/story_bg"
                android:layout_below="@id/likeAndStoryTitle"
                android:id="@+id/scrollView3">
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/tv_story"
                    android:textColor="@color/story_color"
                    android:textStyle="normal|italic"
                    android:fontFamily="serif"
                    android:textSize="15sp" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_above="@id/songNameAndDuration"
            android:layout_below="@id/likeAndStoryTitle"
            android:id="@+id/spaceForImageOrStory"
            >

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:id="@+id/photoView"
                android:background="@drawable/karaoke_bg7"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/gamePanel"
                android:background="@drawable/karaoke_bg7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appcolor_backup1"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/newgame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Game"
                        android:layout_marginLeft="2dp"
                        android:textStyle="bold"
                        android:background="@drawable/songnamedisplaypanel"
                        android:textAllCaps="false"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="How To Play"
                        android:textColor="@color/black"
                        android:fontFamily="serif" />
                    <ImageButton
                        android:id="@+id/gamerules"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="2dip"
                        android:paddingRight="2dip"
                        android:background="@drawable/songnamedisplaypanel"
                        android:src="@drawable/knowhow"
                        android:layout_marginRight="2dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:id="@+id/pointsAndCartoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:background="@color/light_yellow"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Points:"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@android:color/black"
                         />
                    <TextView
                        android:id="@+id/totalScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="25dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-condensed" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:id="@+id/wordSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/appcolor"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="The secret word is below"
                            />

                        <TextView
                            android:id="@+id/selectedWord"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="25dp"
                            android:text="_ _ _ _ _"
                            />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/cartoon"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="right"
                        android:src="@drawable/hangman_1"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_yellow"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="Type here: "
                        android:layout_gravity="center"
                        />

                    <EditText
                        android:id="@+id/guessedLetter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="TYPE"
                        android:text=""
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:selectAllOnFocus="false" />
                    <Button
                        android:id="@+id/checkTheLetter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/songnamedisplaypanel"
                        android:text="TRY"
                        android:minHeight="30dp"
                        android:minWidth="60dp"
                        android:layout_marginRight="5dp"
                        />
                    <ImageView
                        android:id="@+id/expression"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/correctletter"
                        android:visibility="gone"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="5dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected Letters:"
                            />
                        <TextView
                            android:id="@+id/selectedLetters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A,B,C,D"
                            android:textStyle="normal|bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gaananameandtime"
            android:background="@drawable/songnamedisplaypanel"
            android:gravity="center"
            android:id="@+id/songNameAndDuration"
            android:weightSum="1"
            >
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <ImageButton
                android:src="@drawable/more_options"
                android:id="@+id/btn_menu"
                style="@style/genericmoodextrabuttons"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <ImageButton
                style="@style/genericmoodextrabuttons"
                android:src="@drawable/love_ns"
                android:id="@+id/btn_love"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <ImageButton
                style="@style/genericmoodextrabuttons"
                android:src="@drawable/btn_dedicate"
                android:id="@+id/btn_dedicate"
                />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
            <ImageButton
                style="@style/genericmoodextrabuttons"
                android:src="@drawable/see_playlist"
                android:id="@+id/btn_playlist"
                android:onClick="showPlayList"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                />
        </LinearLayout>
        <!--android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/playerControls"
            android:background="@drawable/songnamedisplaypanel"
            android:id="@+id/gaananameandtime"
            >
            <TextView
                android:id="@+id/nameOfSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekBar"
                android:scrollHorizontally="true"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:text="Song_Name - Artist_Name"
                android:textSize="13sp"
                android:textStyle="italic"
                android:fontFamily="serif" />
            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nameOfSong"
                android:gravity="right"
                android:text="00:00"
                android:paddingRight="5dp"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                android:fontFamily="serif"
                android:layout_below="@+id/likeButton" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/playerControls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@drawable/songnamedisplaypanel"
            >
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttons"
                android:background="@color/seekbar_bg"
                style="@style/Widget.AppCompat.SeekBar" />
            <LinearLayout
                android:id="@+id/buttons"
                android:orientation="horizontal"
                android:background="@color/gm_mp_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:id="@+id/repeatButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/repeat_none"
                    android:layout_weight="1"
                    android:text=""
                    android:onClick="onClickRepeatButton" />
                <Button
                    android:id="@+id/prevButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="@dimen/mp_buttons_hw"
                    android:layout_height="@dimen/mp_buttons_hw"
                    android:background="@mipmap/prev"
                    android:layout_weight="1"
                    android:text=""
                    android:onClick="onClickPrevButton" />
                <Button
                    android:id="@+id/playPauseBtn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="@dimen/mp_buttons_hw"
                    android:layout_height="@dimen/mp_buttons_hw"
                    android:background="@mipmap/play"
                    android:layout_weight="1"
                    android:text=""
                    android:visibility="visible"
                    android:onClick="onClickPlayOrPauseButton" />
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/stopButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="@dimen/mp_buttons_hw"
                    android:layout_height="@dimen/mp_buttons_hw"
                    android:background="@mipmap/stop"
                    android:layout_weight="1"
                    android:text=""
                    android:onClick="onClickStopButton" />
                <Button
                    android:id="@+id/nextButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="@dimen/mp_buttons_hw"
                    android:layout_height="@dimen/mp_buttons_hw"
                    android:background="@mipmap/next"
                    android:layout_weight="1"
                    android:text=""
                    android:onClick="onClickNextButton" />
                <Button
                    android:id="@+id/shuffleButton"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="7dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/shuffle"
                    android:layout_weight="1"
                    android:text=""
                    android:onClick="onClickShuffleButton" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_story_spinner"
            android:indeterminateTint="#FF0000"
            android:layout_marginTop="107dp"
            android:visibility="gone"
            android:layout_below="@+id/spaceForImageOrStory"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
