<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/genericmood"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context="com.moodoff.GenericMood">
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/storyTitle"
        android:background="#13f9f9"
        android:gravity="right"
        >
        <!--<android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@drawable/changemood"
            android:id="@+id/btn_changemood"
            app:backgroundTint="@color/light_yellow"
            android:layout_alignTop="@+id/btn_love"
            android:layout_toLeftOf="@+id/btn_love"
            android:layout_toStartOf="@+id/btn_love"
            android:layout_marginEnd="7dp"
            app:fabSize="mini"
            />-->
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#f5322f"
            android:layout_marginRight="7dp"
            android:src="@drawable/more_options"
            android:id="@+id/btn_menu"
            app:fabSize="mini"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/storyAndPlayer"
        android:background="#072c45"
        android:layout_below="@id/storyTitle"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/seekBar"
            android:id="@+id/spaceForImageOrStory"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/photoView"
                android:background="@drawable/karaoke_bg7"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/likeAndStoryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorAccent"
                >
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/light_yellow"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/love_ns"
                    android:id="@+id/like_story"
                    app:fabSize="mini"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- The different Romance -"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:fontFamily="cursive"
                    android:layout_marginRight="10dp"
                    android:id="@+id/tv_storytitle" />
            </LinearLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/likeAndStoryTitle"
                android:id="@+id/scrollView3">
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tv_story"
                    android:textColor="#ffffff"
                    android:textStyle="normal|italic"
                    android:fontFamily="serif"
                    android:textSize="15sp" />
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_above="@+id/seekBar"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/songNameAndDuration"
            >
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/love_ns"
                android:id="@+id/btn_love"
                app:backgroundTint="#13f9f9"
                app:fabSize="mini"
                />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:src="@drawable/btn_dedicate"
                android:id="@+id/btn_dedicate"
                app:backgroundTint="#13f9f9"
                android:layout_marginEnd="7dp"
                app:fabSize="mini"
                />
            <TextView
                android:id="@+id/nameOfSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/seekBar"
                android:scrollHorizontally="true"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:text="[ Click on Play to play Random Song ]"
                android:textColor="#FFFF00"
                android:background="#000000"
                android:textSize="13sp"
                android:textStyle="italic"
                android:fontFamily="serif" />
            <TextView
                android:id="@+id/duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/nameOfSong"
                android:gravity="right"
                android:text="00:00"
                android:paddingRight="5dp"
                android:textColor="#FFFF00"
                android:background="#000000"
                android:textSize="13sp"
                android:textStyle="bold|italic"
                android:fontFamily="serif"
                android:layout_below="@+id/likeButton" />
        </LinearLayout>
        <!--android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"-->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttons"
            android:background="#13f9f9"
            style="@style/Widget.AppCompat.SeekBar" />
        <LinearLayout
            android:id="@+id/buttons"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="#13f9f9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            >

            <Button
                android:id="@+id/repeatButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/repeat_none"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickRepeatButton" />
            <Button
                android:id="@+id/prevButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/prev"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickPrevButton" />
            <Button
                android:id="@+id/playPauseBtn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/play"
                android:layout_weight="1"
                android:text=""
                android:visibility="visible"
                android:onClick="onClickPlayOrPauseButton" />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"/>
            <Button
                android:id="@+id/stopButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/stop"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickStopButton" />
            <Button
                android:id="@+id/nextButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_width="@dimen/mp_buttons_hw"
                android:layout_height="@dimen/mp_buttons_hw"
                android:background="@mipmap/next"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickNextButton" />

            <Button
                android:id="@+id/shuffleButton"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="7dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/shuffle"
                android:layout_weight="1"
                android:text=""
                android:onClick="onClickShuffleButton" />
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/load_story_spinner"
            android:indeterminateTint="#FF0000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp" />


    </RelativeLayout>

</LinearLayout>
