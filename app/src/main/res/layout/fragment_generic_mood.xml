<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/genericmood"
    android:layout_height="match_parent"
    tools:context="com.moodoff.GenericMood">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/newsPanel">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="Here is the news for which you were waiting long."
                android:textStyle="bold|italic"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsPanel"
        android:backgroundTint="#000000"
        android:id="@+id/moodbackground"
        android:background="#ffffff"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/floatingButtonsLeft"
            >
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                app:backgroundTint="@color/FBtn_genericMood"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/cameraicon"
                android:id="@+id/btn_camera"
                app:fabSize="mini" />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/changemood"
                android:id="@+id/btn_changemood"
                app:backgroundTint="@color/FBtn_genericMood"
                app:fabSize="mini" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/moodbg_image"
            android:layout_toRightOf="@id/floatingButtonsLeft"
            >
            <ImageView
                android:layout_width="270dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/karaoke_bg"
                android:scaleType="fitXY"
                android:id="@+id/photoView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/floatingButtonsRight"
            android:layout_toRightOf="@id/moodbg_image"
            >
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/love_ns"
                android:id="@+id/btn_love"
                app:backgroundTint="@color/FBtn_genericMood"
                app:fabSize="mini" />
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:src="@drawable/btn_dedicate"
                android:id="@+id/btn_dedicate"
                app:backgroundTint="@color/FBtn_genericMood"
                app:fabSize="mini" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_below="@id/moodbackground"
        >
        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bol Do Naa Zara.mp3"
            android:textColor="@android:color/black"
            android:textStyle="normal|bold"
            />
    </RelativeLayout>

</RelativeLayout>