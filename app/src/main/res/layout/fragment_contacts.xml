<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/allContactDisplay"
    android:orientation="vertical"
    android:background="@drawable/karaoke_bg7"
    tools:context="com.moodoff.ContactsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/refreshAndUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
    >
    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:id="@+id/refreshSpin"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/refreshAndUserProfile"
        android:layout_toLeftOf="@+id/refreshAndUserProfile"
        android:layout_toStartOf="@+id/refreshAndUserProfile" />
<ScrollView
    android:id="@+id/contactsScroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:layout_marginTop="10dp"
    android:layout_below="@id/refreshAndUserProfile"
    >

</ScrollView>
</RelativeLayout>
