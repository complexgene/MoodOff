<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/appcolor"
    tools:context="com.moodoff.RegistrationActivity">

    <TextView
        android:text="Register Yourself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_registration"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:typeface="monospace"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textStyle="normal|bold" />
    <LinearLayout
        android:id="@+id/userformdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title_registration"
        >

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textStyle="normal|bold"
            android:background="@drawable/registrationdatabox"
            android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            />

        <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:hint="10 Digit Mobile Number"
        android:maxLines="1"
        android:inputType="number"
        android:maxLength="10"
        android:textStyle="normal|bold"
        android:background="@drawable/registrationdatabox"
        android:textAlignment="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/darker_gray"
            />
    <EditText
        android:id="@+id/date_of_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789/"
        android:hint="Birthday (dd/mm/yyyy)"
        android:maxLines="1"
        android:textStyle="normal|bold"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/registrationdatabox"
        android:layout_centerVertical="true"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:textColorHint="@android:color/darker_gray"
        />

        <EditText
        android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Text Status for your profile"
            android:textStyle="normal|bold"
            android:background="@drawable/registrationdatabox"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textColorHint="@android:color/darker_gray"
            android:textColorLink="?attr/colorButtonNormal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            >
            <EditText
                android:id="@+id/otp"
                android:layout_gravity=""
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Leave OTP blank now"
                android:textStyle="normal|bold"
                android:background="@color/appcolor_backup2"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/light_yellow"
                android:layout_gravity="center"
                android:text="SEND OTP"
                android:enabled="false"
                />
        </LinearLayout>

</LinearLayout>

    <TextView
        android:id="@+id/error_message"
        android:textColor="@android:color/holo_red_dark"
        android:typeface="serif"
        android:text=""
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/progressBarRegistration"
        android:visibility="visible"
        />
    <ProgressBar
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/progressBarRegistration"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_register"
        android:indeterminateTint="@color/little_deep_orange"
        android:visibility="visible"/>

    <Button
       android:id="@+id/btn_register"
       android:text="Register"
       android:textColor="#080808"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:shadowColor="#A8A8A8"
        android:onClick="register"
        android:background="@color/appcolor_backup1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textSize="30sp" />



