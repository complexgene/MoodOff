<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allmoods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@color/light_yellow"
    tools:context="com.moodoff.Moods">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/firstRowOfMoods"
        >
        <Button
            android:id="@+id/btn_ontour"
            android:text="On tour"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="putmeoff"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:id="@+id/btn_party"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="putmeoff"
            android:background="@mipmap/mood_party"
            />
        <Button
            android:id="@+id/btn_romantic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="putmeoff"
            android:background="@mipmap/mood_romantic"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/light_yellow"
        android:id="@+id/secondRowOfMoods"
        >
    <Button
        android:text="miss u"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/btn_missu"
        android:layout_weight="1"
        android:onClick="putmeoff"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="dance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/btn_dance"
        android:layout_weight="1"
        android:onClick="putmeoff"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="in love "
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/btn_inlove"
        android:layout_weight="1"
        android:onClick="putmeoff"
        style="@style/Widget.AppCompat.Button.Colored" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/light_yellow"
        android:id="@+id/thirdRowOfMoods"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/mood_old_era"
            android:id="@+id/btn_old_era"
            android:layout_weight="1"
            android:onClick="putmeoff"
            />
        </LinearLayout>

        <Button
            android:text="calm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_calm"
            android:layout_weight="1"
            android:onClick="putmeoff"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="crazy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_crazy"
            android:layout_weight="1"
            android:onClick="putmeoff"
            style="@style/Widget.AppCompat.Button.Colored" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/light_yellow"
        android:id="@+id/fourthRowOfMoods"
        >
        <Button
            android:text="Friends"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_friends"
            android:layout_weight="1"
            android:onClick="putmeoff"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_sad"
            android:layout_weight="1"
            android:onClick="putmeoff"
            android:background="@mipmap/mood_sad"/>
        <Button
            android:text="Workout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_workout"
            android:layout_weight="1"
            android:onClick="putmeoff"
            style="@style/Widget.AppCompat.Button.Colored" />
    </LinearLayout>

</LinearLayout>
