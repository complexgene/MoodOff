<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/allmoods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/karaoke_bg7"
    tools:context="com.moodoff.Moods">


    <Button
        android:id="@+id/btn_ontour"
        android:text="On tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="23dp"
        android:height="80dp"
        android:width="100dp"
        android:onClick="putmeoff"
        android:layout_alignBaseline="@+id/btn_party"
        android:layout_alignBottom="@+id/btn_party"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:id="@+id/btn_party"
        android:text="Party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="80dp"
        android:width="100dp"
        android:onClick="putmeoff"
        android:layout_above="@+id/btn_dance"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
       android:text="Romantic"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="64dp"
       android:id="@+id/btn_romantic"
       android:height="80dp"
       android:width="100dp"
       android:onClick="putmeoff"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_party"
        android:layout_toStartOf="@+id/btn_party"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="miss u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_missu"
        android:height="80dp"
        android:width="100dp"
        android:onClick="putmeoff"
        android:layout_below="@+id/btn_ontour"
        android:layout_alignLeft="@+id/btn_ontour"
        android:layout_alignStart="@+id/btn_ontour"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="dance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_dance"
        android:height="80dp"
        android:width="100dp"
        android:onClick="putmeoff"
        android:layout_alignBaseline="@+id/btn_inlove"
        android:layout_alignBottom="@+id/btn_inlove"
        android:layout_alignLeft="@+id/btn_party"
        android:layout_alignStart="@+id/btn_party"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:text="in love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_inlove"
        android:height="80dp"
        android:width="100dp"
        android:onClick="putmeoff"
        android:layout_below="@+id/btn_romantic"
        android:layout_alignLeft="@+id/btn_romantic"
        android:layout_alignStart="@+id/btn_romantic"
        style="@style/Widget.AppCompat.Button.Colored" />


</RelativeLayout>
