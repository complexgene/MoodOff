<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLyt"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/selectsongtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        >
        <TextView
            android:id="@+id/statusChangeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Select the Song"
            android:typeface="normal"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:fontFamily="serif"
            android:textColor="?attr/colorAccent" />

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollCotainerForRingToneSongs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectsongtitle"
        >
        <LinearLayout
            android:id="@+id/eachRingToneSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--<TextView
                android:id="@+id/song1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abcde"
                />-->
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:background="@color/light_yellow"
        >
        <Button
            android:id="@+id/songselectok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/buttonborder"
            android:text="OK"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/songselectcancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textColor="@color/black"
            android:background="@drawable/buttonborder"
            />
    </LinearLayout>

</RelativeLayout>